#!/usr/bin/env bash
set -euo pipefail

# parse your flags into args_for_path
args_for_path=()
while [[ $# -gt 0 ]]; do
  case $1 in
    -s|--sif)           args_for_path+=(--sif "$2");   shift 2;;
    -d|--directory)     args_for_path+=(--directory "$2"); shift 2;;
    -h|--help)          usage;;
    *)                  usage;;
  esac
done

if sif_path=$(apptainer-path "${args_for_path[@]}"); then
  echo "Found: $sif_path"
  exit 0
else
  echo "Error: no SIF found" >&2
  exit 1
fi
